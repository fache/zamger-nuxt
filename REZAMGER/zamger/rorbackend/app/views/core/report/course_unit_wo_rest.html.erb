<% @groups.each do |group|
	@header1 = @header2 = ''
	  # Override this part
      next if group['id'] == 0
      if (@shorten != true)
        @attendance_ids = []
        @attendance_classes = []
        @attendances_max = []
        @attendances_possible = {}
        begin
          attendances = (Lms::Attendance::Attendance).from_course_unit(@course_unit_id, @academic_year_id)
        rescue
          attendaces = []
        end
        attendances.each do |attendance|
          @attendance_ids << attendance['id'].to_i
          @attendances_possible[attendance['id']] = attendance['max']
          if @shorten == false
            @class_id_array = []
            @classes_num = 0
            @attendance_header = ""
            if (@group_id != 0)
              @classes = (Lms::Attendance::Class).from_group_and_scoring_element(@group_id, attendance['id'])
            elsif @virtual_group_id != 0
              @classes = (Lms::Attendance::Class).from_group_and_scoring_element(@virtual_group_id, attendance['id'])
            else
              next
            end
            
			
            @classes.each do |classs|
              @attendance_header += "<td align=\"center\">"+Date.parse(classs['date']).strftime("%d.%m.")+"<br/>"+Time.parse(classs['time']).strftime("%H:%M")+"</td>\n"
